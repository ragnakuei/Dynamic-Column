@using SharedLibrary.ViewModels
@model ColumnBlockVM

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@nameof(ColumnBlockVMItem.Text)</th>
            <th>@nameof(ColumnBlockVMItem.ValueText)</th>
            <th>@nameof(ColumnBlockVMItem.IsRequired)</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ColumnBlockItems) {
        <tr>
            <td>@item.Text</td>
            <td>@item.ValueText</td>
            <td>@item.IsRequired</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { item.Id }) |
                @Html.ActionLink("Details", "Details", new { item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
